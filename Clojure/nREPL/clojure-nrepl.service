[Unit]
Description=Standalone Clojure nREPL Server for Calva

[Service]
ExecStart=/usr/local/bin/clj -Sdeps '{:deps {nrepl/nrepl {:mvn/version "1.3.1"} cider/cider-nrepl {:mvn/version "0.52.1"} org.clojure/tools.namespace {:mvn/version "1.5.0"}}}' -M -m nrepl.cmdline --middleware "[cider.nrepl/cider-middleware]" --port 7888 --bind "127.0.0.1"

Restart=on-failure
RestartSec=5s

StandardOuput=journal
StandardError=journal

[Install]
WantedBy=default.target
